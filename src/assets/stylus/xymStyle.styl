// xie公用样式

.xym{
  .x-container{
    margin: 0 40px;
  }
  .x-list{
    background: #FFFFFF;
    box-shadow: 0 8px 20px -12px rgba(66,114,255,0.30);
    border-radius: 8px;
  }
  .xlist-choose{
    padding: 20px 30px;
    border-bottom: 1px solid #D8DDDF;
    margin-top 30px;
  }
  .xlist-choose-content{
    float left;
  }
  .xcc-box{
    float left;
  }
  .xcc-splitLine{
    float left;
    background: #999999;
    height 14px;
    width 1px;
    margin: 9px 30px 0;
  }
  .xlist-choose-si{
    float right;
  }
  .xlist-operator{
    padding: 20px 30px;
  }
  .xop-btn-submit{
    float left
    background-image: linear-gradient(-137deg, #3596FF 0%, #3572FF 100%);
    box-shadow: 0 1px 6px 1px rgba(196,203,239,0.39);
    border-radius: 4px;
    min-width 120px;
    text-align: center;
    line-height 40px;
    height 40px;
    font-size: 14px;
    color: #FFFFFF;
    cursor pointer;
  }
  .x-list-block{
    height 8px;
    background-image: linear-gradient(#EAEDF9, #FFFFFF);
  }
  .xop-btn-delete{
    float right;
    line-height 40px;
    height 40px;
    padding-left 24px;
    background: url('assets/images/xym/delete.png') no-repeat left center;
    background-size: 20px;
    cursor pointer;
    color rgb(155,155,155);
    font-size: 14px;
  }

  .ll-table{
    padding 30px;
  }
  .llt-thead{
    background: rgb(243,246,255);
  }
  .llt-th{
    position relative;
    box-sizing border-box;
    float left;
    font-size: 14px;
    color: #34414C;
    line-height: 22px;
    height 54px;
    padding 16px 20px;
    overflow hidden;
    text-overflow ellipsis;
    white-space nowrap;
  }
  .llt-tbody .llt-tr{
    position relative;
    border-bottom: 1px solid #E8E8E8;
  }
  .llt-td{
    position relative;
    box-sizing border-box;
    float left;
    font-size: 14px;
    color: #34414C;
    line-height: 22px;
    height 54px;
    padding 16px 20px;
    overflow hidden;
    text-overflow ellipsis;
    white-space nowrap;
  }
  .llt-tr.offline .llt-td{
    color: #999999;
  }
  .llt-td-a{
    color #4272FF;
    cursor pointer;
  }
  .llt-td-line{
    vertical-align middle;
    font-style normal;
    color: #D8DDDF;
    display inline-block;
    margin: 0 2px;
    font-size 12px;
    margin-top -4px;
  }
  .list-page {
    position: relative;
    margin-top: 20px;
    text-align: right;
  }
  .list-no-data{
    color: #909399;
    font-size: 14px;
    line-height 60px;
    text-align: center;
  }
  .bread-nav{
    position: absolute;
    left: 40px;
    top: 17px;
    z-index: 999;
    font-size: 20px;
  }
  .bread-nav span{
    color: #999;
    cursor pointer;
  }
  .bread-nav em{
    font-style: normal;
    color: #151515;
  }
  .digital-detail-tabTop{
    position relative;
    margin-top 30px;
  }
  .digital-detail-tab{
    float left;
  }
  .digital-detail-tab span{
    position relative;
    display block;
    float left;
    width 160px;
    line-height 56px;
    text-align: center;
    font-size: 16px;
    border-radius: 8px 8px 0 0;
    cursor pointer;
    background: #fff;
  }
  .digital-detail-tab span.on{
    z-index 10 !important;
    color: #fff;
    background-image: linear-gradient(137deg, #3572FF 0%, #3596FF 100%) !important;
    box-shadow: 4px 0 4px 0 rgba(196,203,239,0.39);
  }
  .digital-detail-basic{
    background: #FFFFFF;
    box-shadow: 0 8px 20px -12px rgba(66,114,255,0.30);
    border-radius: 8px;
  }
  .xtitle-heading{
    position relative;
    border-bottom: 1px solid #E9E9E9;
  }
  .xtitle-heading-h{
    position relative;
  }
  .xtitle-heading-h-p{
    font-size: 22px;
    color: #2E2E2E;
    font-weight: bold;
    padding-left 30px;
    line-height 78px;
  }
  .xtitle-heading-h-line{
    position: absolute;
    left 0;
    top: 30px;
    background: #3F6AFF;
    width 7px;
    height 18px;
  }
  .digital-detail-basic-content{
    padding: 10px 40px 40px;
  }
  .lar-box{
    box-sizing: border-box;
    float: left;
    width: 25%;
    margin-top: 10px;
    margin-bottom: 0;
  }
  .lar-box-h4{
    box-sizing: border-box;
    float left;
    width 30%;
    padding-right: 30px;
    font-weight: normal;
    line-height: 32px;
    font-size: 12px;
    color: #999999;
    text-align: right;
  }
  .lar-box-el-input,.show-pp{
    box-sizing: border-box;
    float left;
    width 70%;
  }
  .show-pp{
    font-size: 16px;
    color: #333333;
    line-height 32px;
  }
  .map-box{
    margin-top: 30px;
  }
  #map-container{
    height: 460px;
  }


  /* 地图marker样式 */
  .point{
    position: relative;
    width: 48px;
    height: 48px;
    margin-left: -16px;
    margin-top: -24px;
  }
  .point-tip{
    position: absolute;
    top: -60px;
    left: 50%;
    margin-left: -67px;
    width: 130px;
    height: 50px;
    background: rgba(52,65,76,0.90);
    border-radius: 4px;
    display: none;
  }
  .point-tip.point-tip-show{
    display: block;
  }
  .point-tri{
    position: absolute;
    bottom: -18px;
    left: 50%;
    margin-left: -6px;
    width: 0; 
    height: 0;
    border-width: 9px;
    border-style: solid;
    border-color: rgba(52,65,76,0.90) transparent transparent transparent;
  }
  .point-tip-p{
    font-size: 12px;
    line-height: 20px;
    color: #FFFFFF;
    padding: 0 10px;
    white-space: normal;
    margin-top: -37px;
  }
  .point-light{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #4272FF;
    opacity: 0.5;
    border-radius: 100%;
    animation: myScale 1.5s infinite forwards;
  }
  .point-circle{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 12px;
    height: 12px;
    background: #4272FF;
    border-radius: 100%;
  }
  @keyframes myScale{
    0% {opacity: 0.8;transform: scale(0.1);}
    100% {opacity: 0;transform: scale(1);}
  }
  /* 地图marker样式结束 */


  .digital-detail-checkArea{
    background: #FFFFFF;
    box-shadow: 0 8px 20px -12px rgba(66,114,255,0.30);
    border-radius: 8px;
    margin-top 20px;
  }
  .digital-detail-checkArea-content{
    padding: 0 30px 40px;
  }
  .dd-checkArea-box{
    position relative;
    box-sizing: border-box
    float left;
    margin-top 30px;
    width 18%;
    height 200px;
    margin-left 2%;
    border: 1px solid #D8DDDF;
    border-radius: 4px;
    padding: 0 30px;
  }
  .digital-detail-checkArea-content .dd-checkArea-box:nth-child(4n+1){
    margin-left: 0;
  }
  .dd-checkArea-box-close{
    position: absolute;
    top: -10px;
    right -10px;
    width 20px
    height 20px;
    background: url('assets/images/xym/close.png') no-repeat center center;
    background-size: 20px;
    z-index 10;
    cursor pointer;
  }
  .ddcarea-item{
    margin-top: 20px;
  }
  .ddcarea-item-label{
    font-size: 12px;
    line-height 24px;
    color: #999999;
  }
  .ddcarea-item-input{
    margin-top 10px;
  }
  .add-check-point{
    text-align: center;
    padding-top: 53px;
  }
  .add-check-point-img{
    width: 40px;
    height: 40px;
    margin: 0 auto;
    background: url('assets/images/xym/add-check.png') no-repeat center center;
    background-size: 40px;
  }
  .add-check-point-p{
    font-size: 20px;
    color: #3572FF;
    margin-top 10px;
  }
  .xlist-btn-con{
    margin-top 30px;
  }
  .xlist-btn{
    box-sizing: border-box;
    width 160px;
    height 40px;
    line-height 40px;
    height 40px;
    text-align: center;
    font-size: 14px;
    border-radius: 10px;
    cursor pointer;
  }
  .xlist-btn.xlist-btn-submit{
    background-image: linear-gradient(137deg, #3572FF 0%, #3596FF 100%);
    box-shadow: 0 0 4px 0 rgba(128,128,128,0.50);
    color: #fff;
  }
  .xlist-btn.xlist-btn-cancel{
    border: 1px solid #E4E4E4;
    color: #3572FF;
  }
  .la-result{
    padding-bottom: 30px;
  }
  .dia-clist{
    padding: 0 30px;
  }
  .dia-citem{
    margin-top 24px;
  }
  .dia-citem-label{
    line-height 28px;
    font-size: 12px;
    color: #3F3F3F;
  }
  .dia-citem-label span{
    color #F56B25;
    display inline-block;
    margin-right: 3px;
  }
  .dia-btn-con{
    padding: 30px;
    margin-top: 10px;
  }
  .dia-btn-submit{
    display inline-block;
    width 140px;
    line-height 36px;
    height 36px;
    color #fff;
    font-size: 14px;
    text-align: center;
    cursor pointer;
    background-image: linear-gradient(137deg, #3572FF 0%, #3596FF 100%);
    box-shadow: 0 8px 20px -10px rgba(27,69,191,0.60);
    border-radius: 24px;
  }
  .dia-btn-cancel{
    display inline-block;
    width 50px;
    line-height 36px;
    height 36px;
    color: #3572FF;
    font-size: 14px;
    text-align: center;
    cursor pointer;
    margin-right: 20px;
  }
  .x-digital-detail{
    position relative;
    background: #FFFFFF;
    box-shadow: 0 5px 12px 0 rgba(196,203,239,0.39);
    border-radius: 8px;
    height 120px;
  }
  .xddetail-name{
    position: absolute;
    top: 0;
    left 0;
    width 190px;
    height 120px;
    line-height 120px;
    text-align: center;
  }
  .xddetail-name-p{
    display inline-block;
    width 100%;
    line-height 45px;
    font-size: 34px;
    color: #3572FF;
    vertical-align: middle;
    max-height: 90px;
    overflow hidden;
  }
  .xddetail-list{
    padding-left 220px;
    padding-top: 10px;
  }
  .xddetail-list-item{
    float left;
    margin-top 6px;
  }
  .xddetail-list-item-title{
    float left;
    width 100px;
    line-height 40px
    height 40px;
    color: #999999;
  }
  .xddetail-list-item-p{
    float left
    line-height 40px
    height 40px;
    font-size: 16px;
    color: #333333;
    padding-right: 100px;
    text-overflow: ellipsis;
    overflow hidden;
    white-space nowrap;
  }
  


}



